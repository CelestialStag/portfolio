{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* module resolution options */
    "paths": {
      "@assets": ["../public"],
      "@assets/*": ["../public/*"],
      "@pages": ["pages/"],
      "@pages/*": ["pages/*"],
      "@components": ["components/"],
      "@components/*": ["components/*"],
      "@stores": ["stores/"],
      "@stores/*": ["stores/*"],
      // "@themes": ["themes/"],
      // "@themes/*": ["themes/*"],
      // "@hooks": ["hooks/"],
      // "@hooks/*": ["hooks/*"],
      "@styles": ["styles/"],
      "@styles/*": ["styles/*"]
      // "@data": ["data/"],
      // "@data/*": ["data/*"]
    },
    /* other options */
    "lib": ["dom", "dom.iterable", "es2020"],
    "types": ["node", "react"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "./typings/index.d.ts", "assets/**/*"],
  "exclude": ["node_modules"]
}
