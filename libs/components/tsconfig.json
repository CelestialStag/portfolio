{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "es6",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist/cjs"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "./typings/index.d.ts"],
  "exclude": ["node_modules/", "**/spec.ts"]
}
